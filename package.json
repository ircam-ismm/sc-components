{
  "name": "@ircam/sc-components",
  "version": "3.0.0-alpha.26",
  "description": "Simple and robust Web Component library for rapid prototyping of audio and creative applications in the browser. ",
  "authors": [
    "Benjamin Matuszewski",
    "Aliénor Golvet",
    "Etienne Démoulin"
  ],
  "license": "BSD-3-Clause",
  "main": "src/index.js",
  "unpkg": "./build/bundle.js",
  "exports": {
    ".": "src/index.js",
    "./": "src/"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ircam-ismm/sc-components"
  },
  "bugs": {
    "url": "https://github.com/ircam-ismm/sc-components/issues"
  },
  "homepage": "https://ircam-ismm.github.io/sc-components/",
  "keywords": [
    "lit",
    "components",
    "GUI",
    "prototyping",
    "web audio",
    "creative coding"
  ],
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "clean": "rm -Rf vendors",
    "preversion": "npm run vendors && npm run build",
    "doc": "npm run vendors && cd docs && npm run dev",
    "doc:prod": "npm run vendors && cd docs && npm run build:prod",
    "test": "npm run vendors && cd tests && npm run dev",
    "vendors": "node .bin/prepare-codemirror.js"
  },
  "dependencies": {
    "@ircam/sc-gettime": "^1.0.1",
    "@ircam/sc-utils": "^1.2.0",
    "codemirror": "^5.55.0",
    "highlight.js": "^11.8.0",
    "lit": "^2.7.5",
    "number-precision": "^1.6.0"
  },
  "devDependencies": {
    "json5": "^2.2.3",
    "npm-run-all": "^4.1.5",
    "serve": "^14.2.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
